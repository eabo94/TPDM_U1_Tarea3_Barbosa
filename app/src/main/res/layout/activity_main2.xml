<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"

    android:id="@+id/contenedor"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join a norwegian Club!"
        android:textStyle="bold"
        android:textSize="25dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Practice chatting in Norwegian whit
           other learners"
        android:id="@+id/texto"
        app:fontFamily="serif-monospace" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/cel"
        android:src="@drawable/reac" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/reac"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="220dp"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/reac"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="270dp"
        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/reac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIND ME A CLUB"
        android:background="@drawable/botonredondo"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textColor="#519AE4"
        android:background="@drawable/botonredondo2"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="60dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textColor="#5CA2E7"
        android:background="@drawable/botonredondo2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="210dp"
        android:layout_marginBottom="60dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="35dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/face"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ins" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whats"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tw"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/youtube"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"

            />
    </LinearLayout>
</RelativeLayout>